<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddItemActivity">

    <EditText
        android:id="@+id/txtAddItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="Tuotteen nimi"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtAddNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Lisätieto"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/txtAddItem"
        app:layout_constraintStart_toStartOf="@+id/txtAddItem"
        app:layout_constraintTop_toBottomOf="@+id/txtAddItem" />

    <Button
        android:id="@+id/btnAddItemInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Lisää tuote"
        android:onClick="addItem"
        app:layout_constraintEnd_toEndOf="@+id/txtAddNote"
        app:layout_constraintStart_toStartOf="@+id/txtAddNote"
        app:layout_constraintTop_toBottomOf="@+id/txtAddNote" />
</androidx.constraintlayout.widget.ConstraintLayout>